{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "paths": {
            "@app/workspace-plugin": ["tools/workspace-plugin/index.ts"],
            "shared/ui/components": ["libs/shared/ui/components/src/index.ts"],
            "tasks/feature-board": ["libs/tasks/feature-board/src/index.ts"],
            "user/shell": ["libs/user/shell/src/index.ts"],
            "user/util": ["libs/user/util/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
